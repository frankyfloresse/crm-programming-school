      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const responseJson = pm.response.json();",
                  "    ",
                  "    // Store tokens in collection variables",
                  "    pm.collectionVariables.set('accessToken', responseJson.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', responseJson.refreshToken);",
                  "    ",
                  "    // Store token expiration times",
                  "    pm.collectionVariables.set('accessExpiresAt', responseJson.accessExpiresAt);",
                  "    pm.collectionVariables.set('refreshExpiresAt', responseJson.refreshExpiresAt);",
                  "    ",
                  "    // Store user info",
                  "    pm.collectionVariables.set('userId', responseJson.user.id);",
                  "    pm.collectionVariables.set('userRole', responseJson.user.role);",
                  "    ",
                  "    console.log('Login successful. Tokens saved.');",
                  "} else {",
                  "    console.log('Login failed with status:', pm.response.code);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"{{userPassword}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const responseJson = pm.response.json();",
                  "    ",
                  "    // Update tokens in collection variables",
                  "    pm.collectionVariables.set('accessToken', responseJson.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', responseJson.refreshToken);",
                  "    ",
                  "    // Update token expiration times",
                  "    pm.collectionVariables.set('accessExpiresAt', responseJson.accessExpiresAt);",
                  "    pm.collectionVariables.set('refreshExpiresAt', responseJson.refreshExpiresAt);",
                  "    ",
                  "    console.log('Token refreshed successfully.');",
                  "} else {",
                  "    console.log('Token refresh failed with status:', pm.response.code);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh"]
            }
          },
          "response": []
        },
        {
          "name": "Logout",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    // Clear tokens from collection variables",
                  "    pm.collectionVariables.unset('accessToken');",
                  "    pm.collectionVariables.unset('refreshToken');",
                  "    pm.collectionVariables.unset('accessExpiresAt');",
                  "    pm.collectionVariables.unset('refreshExpiresAt');",
                  "    pm.collectionVariables.unset('userId');",
                  "    pm.collectionVariables.unset('userRole');",
                  "    ",
                  "    console.log('Logout successful. Tokens cleared.');",
                  "} else {",
                  "    console.log('Logout failed with status:', pm.response.code);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            },
